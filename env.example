# NASA Deep Zoom AI Platform - Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/nasa_deep_zoom

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters

# NASA API
NASA_API_KEY=your_nasa_api_key_here

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your_s3_bucket_name_here

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_PER_MINUTE=100

# Monitoring (Optional)
ELASTIC_PASSWORD=your_elastic_password_here
PROMETHEUS_ENABLED=true

# GPU Configuration
GPU_ENABLED=true
CUDA_VISIBLE_DEVICES=1

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.tiff,.dzi

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
CACHE_MAX_SIZE=1000  # Maximum number of cached items

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_TLS=true

# Backup Configuration (Optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
